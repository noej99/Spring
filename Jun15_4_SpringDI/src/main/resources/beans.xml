<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="d1" class="com.noej.jun154sdi.dog.Dog"></bean>
	<bean id="d2" class="com.noej.jun154sdi.dog.Dog">
		<property name="name" value="뽀삐"></property>
		<property name="age" value="3"></property>
	</bean>
	<bean id="d3" class="com.noej.jun154sdi.dog.Dog">
		<constructor-arg value="바둑이"></constructor-arg>
		<constructor-arg value="2"></constructor-arg>
	</bean>
	<bean id="h1" class="com.noej.jun154sdi.human.Human">
		<property name="name" value="홍길동"></property>
		<property name="age" value="30"></property>
		<property name="pet" ref="d3"></property>
	</bean>
	<bean id="h2" class="com.noej.jun154sdi.human.Human">
		<constructor-arg value="김길동"></constructor-arg>
		<constructor-arg value="20"></constructor-arg>
		<constructor-arg ref="d2"></constructor-arg>
	</bean>
	<bean id="sdf" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd"></constructor-arg>
	</bean>
</beans>
